// app/globals.css
html, body {
width: 100%;
overflow-x: hidden;
}

/* Mobile-First Container System */
.container-fluid {
width: 100%;
max-width: none;
margin: 0 auto;
padding-left: clamp(1rem, 2.5vw, 2rem);
padding-right: clamp(1rem, 2.5vw, 2rem);
}

.edge-x {
padding-left: clamp(1rem, 2.5vw, 2rem);
padding-right: clamp(1rem, 2.5vw, 2rem);
}

// app/layout.tsx
import './globals.css'
import { Inter } from 'next/font/google'
import { ReactNode } from 'react'

const inter = Inter({ subsets: ['latin'] })

export default function RootLayout({ children }: { children: ReactNode }) {
return (
  <html lang="en">
    <body className={`${inter.className} antialiased min-h-screen overflow-x-hidden bg-black text-white`}>
      {children}
    </body>
  </html>
)
}

